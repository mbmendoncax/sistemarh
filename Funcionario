public class Funcionario {
    private int id;
    private String nome;
    private int idade;
    private String telefone;
    private String endereco;
    private String cargo;
    private double salario;
    private String contatoEmergencia;
    private String[] beneficios;

    public Funcionario(int id, String nome, int idade, String telefone, String endereco,
                       String cargo, double salario, String contatoEmergencia, String[] beneficios) {
        this.id = id;
        this.nome = nome;
        this.idade = idade;
        this.telefone = telefone;
        this.endereco = endereco;
        this.cargo = cargo;
        this.salario = salario;
        this.contatoEmergencia = contatoEmergencia;
        this.beneficios = beneficios;
    }

    public int getId() { return id; }
    public String getNome() { return nome; }
    public void setSalario(double salario) { this.salario = salario; }
    public void setCargo(String cargo) { this.cargo = cargo; }

    @Override
    public String toString() {
        return "ID: " + id + ", Nome: " + nome + ", Cargo: " + cargo + ", Sal√°rio: R$" + salario;
    }
}
